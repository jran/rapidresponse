<script language="JavaScript">
function toggle(source) {
  checkboxes = document.getElementsByName('building');
  for(var i=0, n=checkboxes.length;i<n;i++) {
    checkboxes[i].checked = source.checked;
  }
}
function roles(selection){ 
   switch(selection){
       case 'medical':
         medical = document.getElementsByValue('medicine');
         medical.checked = source.checked;
			pharmacist = document.getElementsByValue('pharmacist');
         pharmacist.checked = source.checked;
			ccops = document.getElementsByValue('CCOPS');
         ccops.checked = source.checked;
		   respiratory = document.getElementsByValue('respiratory');
			respiratory.checked = source.checked;
		   coordinator = document.getElementsByValue('coordinator');
		   coordinator.checked = source.checked;
       case 'surgical':
			surgical = document.getElementsByValue('surgical');
			surgical.checked = source.checked;
		   pharmacist = document.getElementsByValue('pharmacist');
		   pharmacist.checked = source.checked;
			ccops = document.getElementsByValue('CCOPS');
			ccops.checked = source.checked;
			respiratory = document.getElementsByValue('respiratory');
			respiratory.checked = source.checked;
			coordinator = document.getElementsByValue('coordinator');
			coordinator.checked = source.checked;
         break;
       case 'anesthesia':
			anesthesia = document.getElementsByValue('anesthesia');
			anesthesia.checked = source.checked;
			respiratory = document.getElementsByValue('respiratory');
			respiratory.checked = source.checked;
         break;
       case 'code':
			checkboxes = document.getElementsByName('role');
			for(var i=0, n=checkboxes.length;i<n;i++) {
				checkboxes[i].checked = source.checked;
			}
         break;
       case 'airway':
         anesthesia = document.getElementsByValue('anesthesia');
			anesthesia.checked = source.checked;
			respiratory = document.getElementsByValue('respiratory');
         respiratory.checked = source.checked;
         surgical = document.getElementsByValue('surgical');
         surgical.checked = source.checked;
         break;
   }
}
</script>


<body>
  <section class="container"> 
    <div id="login">
      <h1>Alert RRT</h1>
      <form class="form-alert" role="form"> <!--??-->
	<p>Location</p>
	<input type="checkbox" onClick="toggle(this)" /> All<br/>
	<input type="checkbox" name="building" value="founders"> Founders<br/>
	<input type="checkbox" name="building" value="rhoads"> Rhoads<br/>
	<input type="checkbox" name="building" value="silverstein"> Silvertstein<br/>
	<p><input type="text" name="room" placeholder="Room Number"></p>
	<p> Types of Emergencies</p>
	<select name="emergenceType" onChang="roles(this)">
	  <option value="medical">Medical Rapid Response</option>
	  <option value="surgical">Surgical Rapid Response</option>
	  <option value="anesthesia">Anesthesia Stat</option>
	  <option value="code">Code Call</option>
	  <option value="airway">Airway Emergency</option>
	</select>
	<p> Details </p>
        <p><textarea name="description" rows="5" cols="80" placeholder="Enter Description (Optional)"></textarea></p>
	<p><input type="tel" name="phone" placeholder="Phone number for contact"></p>
	 <p> Roles </p>
	 <input type="checkbox" name="role" value="medicine"> Medicine Resident<br/>
	 <input type="checkbox" name="role" value="surgical"> Surgical Resident<br/>
	 <input type="checkbox" name="role" value="pharmacist"> Pharmacist<br/>
	 <input type="checkbox" name="role" value="CCOPS"> CCOPS <br/>
	 <input type="checkbox" name="role" value="respiratory"> Respiratory Therapy<br/>
	 <input type="checkbox" name="role" value="coordinator"> Coordinator<br/>
	 <input type="checkbox" name="role" value="anethesia"> Anethesia<br/>
	 <input type="checkbox" name="role" value="Other"> Other<br/>
        <button class="submit" type="submit">Send Alert</button>
      </form>
